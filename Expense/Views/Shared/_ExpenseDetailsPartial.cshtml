@model IEnumerable<ExpenseDetailsViewModel>

@{
    ViewData["Title"] = "Index";
    var row = Model.FirstOrDefault();

}

@if (row != null && !row.isShow)
{
    <div class="form-group" style="margin-bottom: 23px">
        <a asp-action="Create" asp-controller="ExpenseDetails" asp-route-id="" class="btn btn-primary">Add Details</a>
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseTypeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            
            @if (row!= null && row.isShow)
            {
            <th>
                @Html.DisplayNameFor(model => model.NetOfVatAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VatAmount)
            </th>
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remarks)
                </td>
                @if (item.isShow)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.NetOfVatAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VatAmount)
                    </td>
                }
                @if (!item.isShow)
                {
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a asp-action="Edit" asp-controller="ExpenseDetails" asp-route-id="@item.ExpenseDetailID" class="btn btn-primary">Edit</a>
                        </div>
                        <div class="btn-group btn-group-sm">
                            <a asp-action="Delete" asp-controller="ExpenseDetails" asp-route-id="@item.ExpenseDetailID" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
