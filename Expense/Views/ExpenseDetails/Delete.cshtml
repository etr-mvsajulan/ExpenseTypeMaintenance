@model ExpenseDetailsViewModel

@{
    ViewData["Title"] = "Delete Details";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExpenseTypeID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Remarks)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Remarks)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NetOfVatAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NetOfVatAmount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VatAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VatAmount)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ExpenseDetailID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Edit" asp-controller="Expenses" asp-route-id="@TempData["EID"]" class="btn btn-danger">Close</a>
    </form>
</div>
